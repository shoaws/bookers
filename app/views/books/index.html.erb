<h1>Books</h1>
<div>
  <table>
    <tr>
      <thead>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </thead>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <tbody>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <td>
            <%= link_to 'Show', book_path(book.id) %>
          </td>
          <td>
            <%= link_to 'Edit', edit_book_path(book.id) %>
          </td>
          <td>
            
          </td>
        </tbody>
      </tr>
    <% end %>
  </table>
</div>

<h2>New book</h2>

<%= form_with model: Book.new do |f| %>
  <div class=field>
    <span>Title</span>
    <%= f.text_field :title %>
  </div>
  <div class=area>
    <span>Body</span>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>

<% end %>
