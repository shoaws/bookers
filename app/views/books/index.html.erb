<h1>Books</h1>
<div>
  <table>
    <tr>
      <thead>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </thead>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <tbody>
          <td>
            <%= book.title %>
          </td>
          <td>
            <%= book.body %>
          </td>
          <td>
            <%= link_to 'Show', book_path(book.id) %>
          </td>
          <td>
            <%= link_to 'Edit', edit_book_path(book.id) %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tbody>
      </tr>
    <% end %>
  </table>
</div>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="error_message">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class=field>
    <span>Title</span>
    <%= f.text_field :title %>
  </div>
  <div class=area>
    <span>Body</span>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>

<% end %>
